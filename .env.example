# Environment Variables Template
# Скопируйте этот файл в .env и заполните реальными значениями

NODE_ENV=development
PORT=3000
API_VERSION=v1

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster0.xxx.mongodb.net/database-name

# JWT Secrets (минимальная длина 32 символа)
JWT_SECRET=your_super_secret_jwt_key_change_in_production_32_chars_minimum_key
JWT_EXPIRE=15m

JWT_REFRESH_SECRET=your_refresh_token_secret_32_chars_minimum_key
JWT_REFRESH_EXPIRE=7d

# Two Factor Authentication
TWO_FACTOR_ISSUER=InfluencerAggregator

# Frontend URL (для CORS)
FRONTEND_URL=http://localhost:3001

# Email Configuration
EMAIL_FROM=noreply@influencer-aggregator.com

# Optional: Logging Level
LOG_LEVEL=info
